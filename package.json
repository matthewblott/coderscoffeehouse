{
  "scripts": {
    "build:css": "postcss ./src/assets/css/main.css -o ./www/bundle/bundle.css",
    "watch:css": "postcss ./src/assets/css/main.css -o ./www/bundle/bundle.css --watch",
    "dev": "pnpm eleventy --serve & pnpm watch:css",
    "clean": "rm -rf ./www && mkdir -p ./www",
    "build": "pnpm build:css && pnpm eleventy",
    "package": "tar -czvf www.tar.gz www",
    "package:all": "pnpm clean && pnpm build && pnpm package"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.4.0",
    "cheerio": "^1.0.0-rc.10",
    "cssnano": "^5.0.8",
    "fast-xml-parser": "^4.0.0-beta.2",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.15",
    "tailwindcss-pseudo-selectors": "^2.0.0"
  }
}
